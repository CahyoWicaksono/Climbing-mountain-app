<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="170dp"
    android:layout_marginStart="15dp"
    android:id="@+id/cardview_location"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="80dp"
        android:layout_height="150dp"
        app:cardElevation="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/place_image_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mb_mountain1">

        </ImageView>

    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cv"
            android:fontFamily="@font/poppins"
            android:text="Sunset evening avenue"
            android:textColor="@color/black"
            android:textSize="10dp">

        </TextView>

        <RatingBar
            android:id="@+id/star_1"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cv"
            android:backgroundTint="@color/yellow"
            android:max="5"
            android:numStars="5"
            android:progressTint="@color/yellow"
            android:rating="4"
            android:stepSize="0.5">

        </RatingBar>

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/star_1"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/cv"
            android:fontFamily="@font/poppins"
            android:text="Country"
            android:textSize="10dp">

        </TextView>

        <TextView
            android:id="@+id/cost_mount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cost"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cv"
            android:fontFamily="@font/poppins_bold"
            android:text="india"
            android:textColor="@color/black"
            android:textSize="15dp">

        </TextView>

        <ImageView
            android:id="@+id/like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/like"
            android:layout_below="@id/cost"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp">

        </ImageView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
