<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/back_itiniary"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/initiaty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Initiary List"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/initiary_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/initiaty"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        tools:listitem="@layout/card_initiary" />

    <Button
        android:id="@+id/AddPlanningTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/initiary_list"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/grey_5"
        android:fontFamily="@font/poppins"
        android:text="Add Activity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/Initiary_Next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddPlanningTrip"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_button"
        android:backgroundTint="@color/grey_5"
        android:fontFamily="@font/poppins"
        android:text="Next Step"
        android:textAllCaps="false" />
</RelativeLayout>