<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <RelativeLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/title_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/back">

        <ImageView
            android:id="@+id/group"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_socialmedia"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/title_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your social links"
            android:textSize="25dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/group"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here you can post your travel blog and promote your travel videos"
            android:textSize="20dp"
            android:layout_below="@id/title_group"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_Social1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/title_link"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/form1"
        android:backgroundTint="@color/grey_5"
        android:gravity="center">

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_marginStart="10dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook" />

        <TextView
            android:id="@+id/facebook_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/facebook"
            android:fontFamily="@font/poppins_bold"
            android:text="Facebook"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/desc_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/facebook_id"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/facebook"
            android:fontFamily="@font/poppins"
            android:text="Limited time paid promotion"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_arrow_kanan"
            app:tint="@color/grey_5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_social2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/RL_Social1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/form1"
        android:backgroundTint="@color/grey_5"
        android:gravity="center">

        <ImageView
            android:id="@+id/twitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/twitter" />

        <TextView
            android:id="@+id/twitter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/twitter"
            android:fontFamily="@font/poppins_bold"
            android:text="Twitter"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/desc_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/twitter_id"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/twitter"
            android:fontFamily="@font/poppins"
            android:text="Limited time paid promotion"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_arrow_kanan"
            app:tint="@color/grey_5" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RL_social4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/RL_social3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/form1"
        android:backgroundTint="@color/grey_5"
        android:gravity="center">

        <ImageView
            android:id="@+id/pin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/pit" />

        <TextView
            android:id="@+id/pin_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pin"
            android:fontFamily="@font/poppins_bold"
            android:text="Pinterest"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/desc_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pin_id"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/pin"
            android:fontFamily="@font/poppins"
            android:text="Limited time paid promotion"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_arrow_kanan"
            app:tint="@color/grey_5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_social3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/RL_social2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/form1"
        android:backgroundTint="@color/grey_5"
        android:gravity="center">

        <ImageView
            android:id="@+id/instagram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/instagram" />

        <TextView
            android:id="@+id/instagram_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/instagram"
            android:fontFamily="@font/poppins_bold"
            android:text="Instagram"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/desc_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/instagram_id"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/instagram"
            android:fontFamily="@font/poppins"
            android:text="Limited time paid promotion"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:src="@drawable/ic_baseline_arrow_kanan"
            app:tint="@color/grey_5" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to see if social links are correct"
        android:layout_below="@id/RL_social4"
        android:fontFamily="@font/poppins"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black" />
</RelativeLayout>