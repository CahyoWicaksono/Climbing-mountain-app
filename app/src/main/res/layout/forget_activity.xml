<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OtherMenu.SignInActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:padding="15dp">

                <TextView
                    android:id="@+id/textView_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Forget Password"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView_tex2t"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_text"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins"
                    android:text="Please Reset Password"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_tex2t"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins"
                    android:text="Full name"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:id="@+id/RL_forget_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:background="@drawable/form13"
                    android:backgroundTint="@color/grey_5">

                    <ImageView
                        android:id="@+id/imageViewName"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/user"
                        app:tint="@color/black" />


                    <EditText
                        android:id="@+id/editText_fullname_forget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@id/imageViewName"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins"
                        android:hint="Please enter your fullname"
                        android:inputType="textEmailAddress"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </RelativeLayout>
                
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RL_forget_name"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins"
                    android:text="Email"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/RL_email_forget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email"
                    android:background="@drawable/form13"
                    android:backgroundTint="@color/grey_5">

                    <ImageView
                        android:id="@+id/imageViewEmail"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/sms" />


                    <EditText
                        android:id="@+id/ForgetPasswordEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toEndOf="@id/imageViewEmail"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins"
                        android:hint="Please enter your email"
                        android:inputType="textPassword"
                        android:padding="6dp"
                        android:textSize="16sp" />

                </RelativeLayout>

                <Button
                    android:id="@+id/button_Forget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/RL_email_forget"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/form13"
                    android:drawableTint="@color/blue"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Request Reset Password"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_Forget"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="300dp"
                    android:drawableLeft="@drawable/ic_baseline_flash_on_24"
                    android:text="by Cahyo Wicaksono">

                </TextView>
                <ProgressBar
                    android:id="@+id/progress_Bar_login_admin"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:elevation="10dp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>