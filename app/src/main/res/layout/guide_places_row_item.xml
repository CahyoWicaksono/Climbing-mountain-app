<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:id="@+id/cv_guide"
    android:background="@drawable/card_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


    <ImageView
        android:id="@+id/place_image_guide"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/equipment" />

    <TextView
        android:id="@+id/place_name_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Equipment Climbing"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/place_image_guide"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/desc_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="desc"
        android:textSize="10dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/place_name_guide"
        app:layout_constraintTop_toBottomOf="@+id/place_name_guide" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
